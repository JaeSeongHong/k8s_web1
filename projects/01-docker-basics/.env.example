# 환경 설정 템플릿
# 실제 사용 시 .env 파일로 복사하고 값을 수정하세요

# 환경 구분
ENVIRONMENT=development

# Database 설정
DB_HOST=database
DB_PORT=5432
DB_NAME=devops_db
DB_USER=devops_user
DB_PASSWORD=change_this_password_in_production

# Backend 설정
BACKEND_PORT=5000
BACKEND_WORKERS=2
BACKEND_TIMEOUT=60
FLASK_ENV=development

# Frontend 설정
FRONTEND_PORT=8080

# 로그 설정
LOG_LEVEL=INFO

# 리소스 제한
CPU_LIMIT=1.0
MEMORY_LIMIT=512M
